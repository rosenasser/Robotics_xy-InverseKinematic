#include <Servo.h>
const double pi = 3.14159267;
double x,y;// input from the user
double L1=10.0,L2=12.0,Q1,Q2; 
double Q=radian(85.0);//fixed 
void setup()
{
  Serial.begin(9600);
  Servo motor1;
  Servo motor2;
  Serial.println(" enter x ");
  while(Serial.available()==0){}
  x=Serial.parseInt();
  Serial.println(" enter y ");
  while(Serial.available()==0){}
  y=Serial.parseInt();
  Q2=pow(x,2)+pow(y,2)-pow(L1,2)-pow(L2,2);
  double i=2*L1*L2;
  Q2=Q2/i;
  Q2=acos(Q2);
  Q1=Q-Q2;
  Q2=degree(Q2);
  Q1=degree(Q1);
  Serial.println(Q1);
  Serial.println(Q2);
  motor1.attach(11);
  motor2.attach(12);
  motor1.write(Q1);
  motor2.write(Q2);
  delay(3000); 
  motor1.write(0);
  motor2.write(0);
  delay(3000);
}

void loop()
{
  
}
double radian(double degree) {
  return degree / 360 * 2.0 * pi;
}
double degree(double radian) {
  return radian / 2.0 / pi * 360;
}
